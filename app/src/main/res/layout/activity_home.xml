<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/welcome_icon_spacing"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/nav_header_desc"
            android:orientation="vertical"
            app:srcCompat="@drawable/welcome_blurb" />

        <TextView
            android:id="@+id/login_indicator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:text="Logged In:" />

        <TextView
            android:id="@+id/information_blurb"
            android:layout_width="325dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="30dp"
            android:text="Socialite is an application designed to provide insights on your text communication. We are fully aware that in today's world the majority of communication is completed over a text medium and therefore, having a tool which can provide analysis on your own written communication is priceless. \n\nIf you are new to Socialite, weâ€™d recommend you explore the testing suite in order to get your bearings."
            android:textSize="18sp"></TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:paddingTop="40dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">
            <Button
                android:id="@+id/Testing_Suite_Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Testing Suite"
                android:background="@color/colorPrimary"
                android:textColor="#FFFFFF"
                android:theme="@style/Widget.AppCompat.Button.Colored"/>
        </LinearLayout>
    </LinearLayout>


    <include
        layout="@layout/app_bar_navigation_drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_navigation_drawer"
        app:menu="@menu/activity_navigation_drawer_drawer">

    </android.support.design.widget.NavigationView>


</android.support.v4.widget.DrawerLayout>
