        <item name="colorControlActivated">@color/LogInPrimaryActivated</item>
        <item name="android:textColorHint">@color/LogInPrimaryActivated</item>
    </style>

    <style name="AppCompat.Light" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
